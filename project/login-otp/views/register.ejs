    <script>
        var loader = document.querySelector(".loader")
    
    window.addEventListener("load", vanish);
    
    function vanish() {
      loader.classList.add("disppear");
    }
  
        function validation() {

            var name = document.getElementById('name').value;
            if (name.length < 2) {
                document.getElementById('namee').innerHTML = "**min 2 char**";
                return false;
            }
            if (!isNaN(name)) {
                document.getElementById('namee').innerHTML = "**numeric inputs are not allowed**";
                return false;
            }
            else {
                document.getElementById('namee').innerHTML = "";
            }
            var password = document.getElementById('password').value;
            if (password == "") {
                document.getElementById('passwordd').innerHTML = "**require to fill**";
                return false;
            }
            if (password.length < 8) {
                document.getElementById('passwordd').innerHTML = "**min eight digit**";
                return false;
            }
            if (password.search(/[a-z]/) == -1) {
                document.getElementById('passwordd').innerHTML = "**there should be a lower case char in password**";
                return false;
            }
            if (password.search(/[A-Z]/) == -1) {
                document.getElementById('passwordd').innerHTML = "**there should be a upper case char in password**";
                return false;
            }
            else {
                document.getElementById('passwordd').innerHTML = "";
            }
            var conpass = document.getElementById('con-pass').value;
            if(conpass != password){
                document.getElementById('pass').innerHTML = "**password doesn't match**";
                return false;
            }
            else{
                document.getElementById('pass').innerHTML = "";
            }
        }
       


    </script>
